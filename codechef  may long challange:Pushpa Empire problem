#include<bits/stdc++.h>
using namespace std;
#define ll long long

void solve(){
              int n;
	      cin>>n;
	      
	      vector<ll>v(n);
	      map<ll,ll>m;
	      int ans=0;
	      
	      for(int i=0;i<n;i++)
	      {  
	             cin>>v[i];
		     m[v[i]]++;
	      }
	      
	      for(auto x:m)
	      {
	          ans=max(ans,i.first+i.second-1);
	      }	  
	      
	      cout<<ans<<endl;
	   }   
	      
