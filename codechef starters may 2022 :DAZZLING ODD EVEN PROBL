#include <bits/stdc++.h>
using namespace std;

void solve(){
        int n;
        cin>>n;
        
        vector<int>v(n);
        long long sum=0;
        
        for(int i=0;i<n;i++)
        {
                cin>>v[i];
                sum+=v[i];
        }
        
        if((sum-(n/2))%n==0)
        cout<<"YES"<<endl;
        
        else
        cout<<"NO"<<endl;
}
int main() {
	// your code goes here
	int t;
	cin>>t;
	
	while(t--)
	{
	        solve();
	        
	}
	return 0;
}
