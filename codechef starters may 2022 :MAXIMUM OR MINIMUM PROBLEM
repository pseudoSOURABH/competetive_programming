#include <bits/stdc++.h>
using namespace std;
#define ll long long int

void solve(){
        ll n;
        cin>>n;
        
        vector<ll>v(n);
        for(int i=0;i<n;i++)
        {
                cin>>v[i];
        }
        
        int cnt0=0,cnt1=0;
        for(auto x:v){
                if(x==0)
                cnt0++;
                
                else
                cnt1++;
        }
        
        cnt0<=cnt1?cout<<1<<endl:cout<<0<<endl;
        
}
int main() {
	// your code goes here
	int t;
	cin>>t;
	
	while(t--)
        {
                solve();
        }
	return 0;
}
